.big_box{
  width:690rpx;
  height:220rpx;
  background: #dde6ed;
  border-radius:20rpx;
  margin-top:30rpx;
}
.left_box{
  float:left;
  width:400rpx;
  margin:20rpx 0 0 50rpx;
}
.big_box image{
  width:200rpx;
