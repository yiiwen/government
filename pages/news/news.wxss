/* pages/news/news.wxss */
.container{
  padding: 16px;
}

.page-title{
margin:20rpx 0 10rpx 35rpx;
  font-size: 20pt;
}

.search-btn{
  /* margin-top: 30px; */
  width: 100%;
}

.search-btn button{
  width: 100%;
  height: 40px;
  line-height: 40px;
  border:1px solid #e4e4e4;
}

.news-item {
  width: 100%;
  margin-top: 20px;
  display: flex;
  align-items: left;
  border: 1px solid #dde6ed;
  border-radius: 8px;
  background: #dde6ed;
}

.news-item-left{
  width: 65%;
  margin:15px;
  
}

.news-title{
  font-size: 12pt;
	line-height: 20px;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 1;
	-webkit-box-orient: vertical;
  color: rgb(128, 127, 127);
}

.news-content{
    margin-top: 16px;
    height: 24px;
    font-size: 14pt;
    line-height: 24px;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.news-item-image{
  display: block;
  width: 35%;
  padding: 0;
  margin: 0;
}

.news-item-image image {
  display: block;
  width: 100%;
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}


