<swiper indicator-dots="{{indicatorDots}}"
	autoplay="true" interval="{{interval}}" duration="{{duration}}" display-multiple-items="1" indicator-dots="true">
	<block wx:for="{{imgUrls}}">
		<swiper-item>
			<image src="{{item}}" class='slide-img' mode="aspectFill" />
		</swiper-item>
	</block>
</swiper>

<movable-area style="width: 100%;height:40px;margin-top:0.2rem;">
	<movable-view class='cases' style='width: 1000rpx;height:40px;overflow:hidden;'  direction="all" x="{{x}}">
		<view wx:for="{{cases}}" class='case-item {{activity == index ? "case-item-activity" : ""}}'
		 bindtap='switchCase' data-index="{{index}}">
			{{item}}
		</view>
	</movable-view>
</movable-area>

<view class="case-list">
	<view class='case'>
		<image src='/images/timg.jpg' mode='widthFix' style='width:100%;'></image>
	</view>

	<view class="case">
		<image src='/images/timg.jpg' mode='aspectFit' style='width:100%;'></image>
	</view>

	<view class="case">
		<image src='/images/timg.jpg' mode='aspectFit' style='width:100%;'></image>
	</view>

