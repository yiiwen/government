page{
        height: 100%;
}

.slide-img{
	width: 100% !important;
}

.case-item{
	width:200rpx;
	text-align: center;
	float: left;
	height: 38px;
	font-size: 0.8rem;
	line-height: 38px;
}

.case-item-activity{
	color: green;
	border-bottom: 2px solid green;
}

.case-list{
	margin-top: 10rpx;
}

.cases-slide {
	position: fixed;
	width: 100%;
}

.case {
	overflow:hidden;
	padding:2rpx 10rpx;
	margin-bottom:5rpx;
}
.case-block-left{
	float: left;
}

.case-block-right{
	margin-left:120px;
}

.case-block-right .case-title{
	display: block;
	height: 25px;
	font-size: 0.9rem;
}

.case-block-right .case-intro{
	height: 57px;
	margin-top: 2px;
	line-height: 19px;
	font-size: 0.7em;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 3;
	-webkit-box-orient: vertical;
}

.on-line-time{
	font-size: 0.6rem;
	color:#CCC;
}

::-webkit-scrollbar{
	width: 0;
	height: 0;
	color: transparent;
}
